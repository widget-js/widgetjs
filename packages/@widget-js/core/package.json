{
  "name": "@widget-js/core",
  "version": "0.4.31",
  "description": "",
  "publishConfig": {
    "access": "public"
  },
  "umd:main": "dist/umd/index.js",
  "types": "dist/types/index.d.ts",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "scripts": {
    "prepublishOnly": "pinst --disable",
    "test": "jest --no-cache --runInBand",
    "test:cov": "jest --coverage --no-cache --runInBand",
    "build": "npm run build:esm && npm run build:types && npm run build:cjs && npm  run build:umd",
    "build:update": "npm run build && yarn --cwd ../../../ upgrade @widget-js/core && yarn --cwd ../../../electron upgrade @widget-js/core",
    "build:cjs": "node tools/cleanup cjs && tsc -p config/tsconfig.cjs.json",
    "build:esm": "node tools/cleanup esm && tsc -p config/tsconfig.esm.json",
    "build:umd": "node tools/cleanup umd && webpack --config config/webpack.config.js",
    "build:types": "node tools/cleanup types && tsc -p config/tsconfig.types.json",
    "package": "npm run build && npm pack",
    "addscope": "node tools/packagejson name @widget-js/core"
  },
  "author": "Neo Fu <rtugeek@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/widom-widget/core",
  "repository": {
    "type": "git",
    "url": "https://github.com/widom-widget/core.git"
  },
  "bugs": {
    "url": "https://github.com/widom-widget/core/issues"
  },
  "files": [
    "dist"
  ],
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/node": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@types/jest": "^29.2.3",
    "@types/urijs": "^1.19.19",
    "babel-core": "^6.26.3",
    "electron": "^23.2.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "pinst": "^3.0.0",
    "rimraf": "^4.4.1",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "change-case": "^4.1.2",
    "localforage": "^1.10.0"
  }
}
